{
    "al.enableCodeAnalysis": true,    
    "al.codeAnalyzers": [
        "${UICop}",
        "${CodeCop}"
    ],
    "al.compilationOptions": {
        "parallel": true,
        "generateReportLayout": false
    },       
    "al.packageCachePath": ".alpackages",
    "al.snapshotOutputPath": "./.snapshots",
    "al.backgroundCodeAnalysis": "Project",   
    "al.enableCodeActions" : true,    
    "editor.codeLens": true,
    "editor.formatOnSave": false,
    "search.exclude": {
        "**/.alcache": true,
        "**/.git": true
    },
    "alVarHelper.ignoreALPrefix": "KPB",
    "CRS.AlSubFolderName": "src",
    "CRS.ObjectNamePrefix": "KPB",
    "CRS.RemovePrefixFromFilename": true,
    "CRS.FileNamePattern": "<ObjectNameShort>.<ObjectTypeShortPascalCase>.al",
    "CRS.FileNamePatternExtensions": "<ObjectNameShort>.<ObjectTypeShortPascalCase>.al",
    "CRS.RenameWithGit": true,
    "CRS.OnSaveAlFileAction": "DoNothing",
    "todo-tree.general.tags": [
        "TODO",
        "FIXME"
    ],   
    "window.title": "AL Test-Tool Extension - ${dirty}${activeEditorShort}${separator}${rootName}${separator}${appName}",    
    "editor.stickyScroll.enabled": true,
        "alOutline.codeActionsOnSave": [
        "SortVariables"
    ],    
    "alOutline.codeCleanupActions": [
        "FixKeywordsCase",
        "FixIdentifiersCase",
        "AddMissingParentheses",
        "ConvertObjectIdsToNames",        
        "RemoveWithStatements",
        "RemoveStrSubstNoFromError",        
        "RemoveBeginEnd",
        "RemoveUnusedVariables",                
        "AddObjectCaptions",
        "AddTableFieldCaptions",        
        "AddPageFieldCaptions",
        "LockRemovedFieldCaptions",
        "SortTableFields",
        "SortPermissions",        
        "SortPermissionSetList",
        "SortVariables",
        "RemoveRedundantAppAreas",
        "AddApplicationAreas",
        "RemoveEmptyTriggers",
        "RemoveEmptyLines",
        "RemoveEmptySections",
        "TrimTrailingWhitespace",
        "FormatDocument"         
    ],
    "alOutline.appAreaMode": "inheritFromMainObject",
    "alOutline.defaultAddPageFieldCaptionsSettings": {
        "setActionsCaptions": true,
        "setActionGroupsCaptions": true,
        "setFieldsCaptions": false,
        "setGroupsCaptions": true
    },
    "alOutline.defaultRemoveEmptyTriggersSettings": {
        "removeSubscribers": true,
        "removeTriggers": true,
        "ignoreComments": false
    },
    "alOutline.defaultRemoveUnusedVariablesSettings": {
        "removeLocalVariables": true,
        "removeGlobalVariables": true,
        "removeLocalMethodParameters": false
    },
    "alOutline.defaultAppArea": "All",
    "alOutline.defaultDataClassification": "CustomerContent",
    "alOutline.codeTransformationIgnoreFiles": [        
    ]
}